<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">EDITAR PERSONAS</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{persona.id}}" method="post">
                        <div class="input-group mt-2">
                            <label for="nombre" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="nombre" value="{{persona.nombre}}" id="nombre"
                                placeholder="Ingrese su nombre" />
                        </div>

                        <div class="input-group mt-2">
                            <label for="edad" class="input-group-text">Edad</label>
                            <input class="form-control" type="text" name="edad" value="{{persona.edad}}" id="edad"
                                placeholder="Ingrese su edad" />
                        </div>

                        <div class="input-group mt-2">
                            <label for="correo" class="input-group-text">Correo</label>
                            <input class="form-control" type="text" name="correo" value="{{persona.correo}}" id="correo"
                                placeholder="Ingrese su correo" />
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>